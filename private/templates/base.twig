<!DOCTYPE html>
<html lang="de" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover">
    <title>{{ title|default('Kek-Counter') }}</title>
    <meta name="description" content="{{ description|default('') }}">
    <meta name="theme-color" content="{{ theme_color|default('#e6edf7') }}">
    <link rel="manifest" href="{{ manifest|default('manifest.webmanifest') }}">
    <link rel="icon" href="{{ favicon|default('assets/logo.png') }}" type="image/png">
    <link rel="apple-touch-icon" href="{{ favicon|default('assets/logo.png') }}">
    <meta property="og:title" content="{{ title|default('Kek-Counter') }}">
    <meta property="og:description" content="{{ description|default('') }}">
    <meta property="og:image" content="{{ og_image|default('assets/logo.png') }}">
    <meta property="og:type" content="website">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="assets/styles.css" rel="stylesheet">
    {% for style in styles %}
        <link href="{{ style }}" rel="stylesheet">
    {% endfor %}
    {{ header_extra|raw }}
</head>
<body class="{{ body_class|default('bg-light') }}">
    <main class="{{ main_class|default('container py-4') }}">
        {% block header %}
            {% if title_h1 is defined %}
                {% include 'partials/header.twig' %}
            {% else %}
                {{ header|raw }}
            {% endif %}
        {% endblock %}
        {% block content %}{{ content|raw }}{% endblock %}
        {% include 'partials/footer.twig' %}
    </main>
    
    {% block modals %}
        {{ modals|raw }}
        {{ settings_modal|raw }}
        {{ access_modal|raw }}
        {{ error_modal|raw }}
    {% endblock %}
    


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ chart_js_src|default('https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js') }}"></script>
    <script src="assets/theme.js"></script>
    <script src="assets/i18n.js"></script>
    <script src="assets/settings.js"></script>
    <script src="assets/access.js"></script>
    {% for code in inline_scripts %}
        <script>{{ code|raw }}</script>
    {% endfor %}
    {% for script in scripts %}
        <script src="{{ script }}"></script>
    {% endfor %}
</body>
</html>
