<div class="d-flex align-items-center justify-content-between mb-2 gap-3">
    <div class="d-flex gap-2">
        <a class="btn btn-lg btn-outline-secondary" href="index.php" title="Zurueck">
            <i class="bi bi-arrow-left"></i>
        </a>
    </div>

    <div class="d-flex justify-content-center gap-2">
        <button type="button" class="btn btn-lg btn-primary btn-tablet-header js-auth-only d-none" id="typeVoucherButton" data-tablet-type="Gutschein">
            <i class="bi bi-ticket-perforated me-2" aria-hidden="true"></i>
            <span data-i18n="pos.voucher">Gutschein</span>
        </button>
        <button type="button" class="btn btn-lg btn-success btn-tablet-header js-auth-only d-none" id="typeFreeButton" data-tablet-type="Gratis">
            <i class="bi bi-gift me-2" aria-hidden="true"></i>
            <span data-i18n="pos.free">Gratis</span>
        </button>
        <button type="button" class="btn btn-lg btn-danger btn-tablet-header js-auth-only d-none" id="stornoButton">
            <i class="bi bi-arrow-counterclockwise me-2" aria-hidden="true"></i>
            <span data-i18n="pos.storno.button">Storno</span>
        </button>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-lg btn-outline-secondary" type="button" data-settings-open title="Einstellungen">
            <i class="bi bi-sliders2"></i>
        </button>
        <button id="accessOpen" class="btn btn-lg btn-outline-primary" type="button" title="Access">
            <i class="bi bi-key"></i>
        </button>
        <button id="accessLogout" class="btn btn-lg btn-outline-secondary d-none" type="button" title="Abmelden">
            <i class="bi bi-box-arrow-right"></i>
        </button>
    </div>
</div>

<ul class="nav nav-tabs flex-nowrap overflow-x-auto mb-2 pb-1" role="tablist" style="-webkit-overflow-scrolling: touch; scrollbar-width: none; -ms-overflow-style: none;">
  {% for index, root_category in categories %}
    <li class="nav-item" role="presentation">
      <button class="nav-link {{ loop.first ? 'active' : '' }}" id="tab-{{ root_category.id }}" data-bs-toggle="tab" data-bs-target="#pane-{{ root_category.id }}" type="button" role="tab" aria-controls="pane-{{ root_category.id }}" aria-selected="{{ loop.first ? 'true' : 'false' }}">
        {{ root_category.name }}
      </button>
    </li>
  {% endfor %}
</ul>

<div class="tab-content">
  {% for root_index, root_category in categories %}
    <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}" id="pane-{{ root_category.id }}" role="tabpanel" aria-labelledby="tab-{{ root_category.id }}">
      <div class="row g-2">
        {% for group_index, group in root_category.groups %}
          {% for item in group.items %}
            <div class="col-6 col-sm-4 col-md-3 col-lg-custom-5">
              <div class="card border-0 shadow-sm overflow-hidden h-100">
                <div class="card-body p-0">
                  <button type="button" class="btn btn-lg btn-tablet-xl js-auth-only d-none w-100 h-100 js-tablet-book-btn category-color-{{ group_index % 8 }}" data-book-type="Verkauft" data-product-id="{{ item.id }}" data-category-color-class="category-color-{{ group_index % 8 }}">
                    <div class="h3 mb-0">{{ item.name }}</div>
                  </button>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>
