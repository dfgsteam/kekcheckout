<section class="card shadow-sm border-0">
    <div class="card-body">
    <ul class="nav nav-tabs" role="tablist">
      {% for index, category in categories %}
        {% set is_active = loop.first %}
        {% set tab_id = 'tab-' ~ category.id %}
        {% set pane_id = 'pane-' ~ category.id %}
        <li class="nav-item" role="presentation">
          <button
            class="nav-link{{ is_active ? ' active' : '' }}"
            id="{{ tab_id }}"
            data-bs-toggle="tab"
            data-bs-target="#{{ pane_id }}"
            type="button"
            role="tab"
            aria-controls="{{ pane_id }}"
            aria-selected="{{ is_active ? 'true' : 'false' }}"
          >{{ category.name|default(category.label|default('')) }}</button>
        </li>
      {% endfor %}
    </ul>
    <div class="tab-content pt-3">
      {% for index, category in categories %}
        {% set is_active = loop.first %}
        {% set tab_id = 'tab-' ~ category.id %}
        {% set pane_id = 'pane-' ~ category.id %}
        <div class="tab-pane fade{{ is_active ? ' show active' : '' }}" id="{{ pane_id }}" role="tabpanel" aria-labelledby="{{ tab_id }}">
          <div class="row g-3">
            {% for item in category.items %}
              <div class="col-6 col-sm-4 col-md-3 col-xl-2">
                <div class="card border-0 shadow-sm overflow-hidden h-100">
                  <div class="card-body p-0">
                    <button type="button" class="btn btn-lg btn-tablet-xl btn-primary js-auth-only d-none w-100 h-100 js-tablet-book-btn" data-book-type="Verkauft" data-product-id="{{ item.id }}">
                      <div class="h3 mb-0">{{ item.name }}</div>
                    </button>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>
    </div>
</section>
